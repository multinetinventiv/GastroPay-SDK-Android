<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_gastropay_sdk">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageRequireLocationGastroPaySdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wallet_transactions_gastropay_sdk" />

    <LinearLayout
        android:id="@+id/layoutPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center|start"
        app:layout_constraintBottom_toTopOf="@+id/descTextView"
        app:layout_constraintEnd_toStartOf="@+id/imageRequireLocationGastroPaySdk"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/valueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/celtic_gastropay_sdk"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="231,32" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/constPointTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/wallet_point_gastropay_sdk"
            android:textColor="@color/celtic_gastropay_sdk"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wallet_my_saved_points_gastropay_sdk"
        android:textColor="@color/celtic_gastropay_sdk"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageRequireLocationGastroPaySdk"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/layoutPoints"
        app:layout_constraintTop_toBottomOf="@+id/layoutPoints" />


</androidx.constraintlayout.widget.ConstraintLayout>