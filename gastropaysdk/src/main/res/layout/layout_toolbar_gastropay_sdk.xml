<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutToolbarGastroPaySdk"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="?colorPrimary"
    tools:layout_height="56dp">

    <RelativeLayout
        android:id="@+id/layoutLeftGastroPaySdk"
        android:layout_width="@dimen/toolbar_action_button_size_gastropay_sdk"
        android:layout_height="@dimen/toolbar_action_button_size_gastropay_sdk"
        android:layout_centerVertical="true"
        android:gravity="center|start"
        android:paddingStart="@dimen/padding_normal_gastropay_sdk"
        android:paddingEnd="0dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageToolbarLeftGastroPaySdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_settings_gastropay_sdk" />

    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textTitleGastroPaySdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:visibility="gone"
        tools:text="TITLE"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageLogoGastroPaySdk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:src="@drawable/ic_logo_gastropay_sdk"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/layoutRightGastroPaySdk"
        android:layout_width="@dimen/toolbar_action_button_size_gastropay_sdk"
        android:layout_height="@dimen/toolbar_action_button_size_gastropay_sdk"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center|end"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_normal_gastropay_sdk"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageToolbarRightGastroPaySdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_close_gastropay_sdk" />

    </RelativeLayout>

</RelativeLayout>