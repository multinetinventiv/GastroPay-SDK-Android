<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.Button.GastroPaySdk" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Base.Widget.Button.Yellow.GastroPaySdk" parent="Base.Widget.Button.GastroPaySdk">
        <item name="cornerRadius">24dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/celtic_gastropay_sdk</item>
        <item name="android:paddingLeft">@dimen/margin_normal_gastropay_sdk</item>
        <item name="android:paddingRight">@dimen/margin_normal_gastropay_sdk</item>
        <item name="android:paddingTop">@dimen/margin_small_x_gastropay_sdk</item>
        <item name="android:paddingBottom">@dimen/margin_small_x_gastropay_sdk</item>
        <item name="android:textSize">@dimen/text_size_normal_gastropay_sdk</item>
    </style>

    <style name="BaseDividerGastroPaySdk">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/celtic_gastropay_sdk</item>
    </style>

    <style name="BaseSectionTitleStyleGastroPaySdk">
        <item name="android:textSize">@dimen/text_size_normal_gastropay_sdk</item>
        <item name="android:textColor">@color/dark_grayish_blue_gastropay_sdk</item>
    </style>

    <style name="BaseSpinnerTagStyleGastroPaySdk">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/shape_gray_rounded_gastropay_sdk</item>
    </style>


</resources>